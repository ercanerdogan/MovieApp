@model IEnumerable<Movie>

@foreach(var item in Model)
{

    <div class="card-mb-3">
        <div class="row no-gutter">
            <div class="col-md-3">
                <img src=~/img/@item.ImageUrl alt="@item.description" class="card-img">

            </div>
            <div class="col md-9">
                <div class="card-body">
                    <h5 class="card-title">@item.name</h5>
                    <p class="card-text">
                        @item.description
                    </p>
                    <p class="text">
                        <small class="text-muted">3 days ago</small>
                    </p>
                </div>
            </div>

        </div>
    </div>
}
